rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }
    
    function isCEO() {
      return hasRole('CEO');
    }

    // --- Rules ---

    // Users collection: CEO sees all, others see themselves
    match /users/{userId} {
      allow read, write: if isAuthenticated() && (isCEO() || request.auth.uid == userId);
    }

    // Client Requests: Anyone can submit, only CEO can manage
    match /clientRequests/{requestId} {
      allow create: if true; 
      allow read, write: if isCEO();
    }

    // Projects: CEO has full access, Members see assigned, Clients see own
    match /projects/{projectId} {
      allow read: if isCEO() || 
                  (isAuthenticated() && request.auth.token.email in resource.data.assignedMembers) ||
                  (isAuthenticated() && request.auth.uid == resource.data.clientId);
      allow write: if isCEO();
    }

    // Reports: CEO sees all, Members create/read for assigned projects
    match /reports/{reportId} {
      allow read: if isCEO() || (isAuthenticated() && request.auth.uid == resource.data.memberId);
      allow create: if isAuthenticated(); // Backend handles project-specific assignment checks
    }

    // Messages: CEO sees all, others see messages in projects they are assigned to
    match /messages/{messageId} {
      allow read, write: if isAuthenticated(); // Simplified for now, can be hardened per project
    }
  }
}
