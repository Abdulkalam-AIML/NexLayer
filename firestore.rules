rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }
    
    function isCEO() {
      return hasRole('CEO');
    }

    // --- Rules ---

    // Users collection: CEO sees all, others see themselves
    match /users/{userId} {
      allow read, write: if isAuthenticated() && (isCEO() || request.auth.uid == userId);
    }

    // Client Requests: Anyone can submit, only CEO can manage
    match /clientRequests/{requestId} {
      allow create: if true; 
      allow read, write: if isCEO();
    }

    // Projects: CEO has full access, Members see ONLY assigned, Clients see ONLY own
    match /projects/{projectId} {
      allow read: if isCEO() || 
                  (isAuthenticated() && request.auth.token.email in resource.data.assignedMembers) ||
                  (isAuthenticated() && request.auth.uid == resource.data.clientId);
      allow write: if isCEO();
    }

    // Reports: Must be assigned to the project to create a report
    match /reports/{reportId} {
      allow read: if isCEO() || (isAuthenticated() && request.auth.uid == data().memberId);
      allow create: if isAuthenticated() && 
                    get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.assignedMembers.hasAny([request.auth.token.email]);
    }

    // Messages: Strict project-level isolation
    match /messages/{messageId} {
      allow read, write: if isAuthenticated() && (
        isCEO() || 
        get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.assignedMembers.hasAny([request.auth.token.email]) ||
        get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.clientId == request.auth.uid
      );
    }

    // Data Validation Schema
    function data() { return resource.data; }
  }
}
